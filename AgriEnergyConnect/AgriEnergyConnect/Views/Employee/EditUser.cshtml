@model AgriEnergyConnect.Models.User

@{
    ViewData["Title"] = "Edit User";
}

<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100vh;
        overflow: hidden;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        position: relative;
    }

        body::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('@Url.Content("~/images/grass.jpeg")');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            filter: brightness(0.4); /* Darkens the image */
            z-index: -2;
        }

        body::after {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5); /* dark overlay */
            z-index: -1;
        }

    .edit-user-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        color: #fff;
    }

    .edit-user-container {
        background-color: #111;
        padding: 40px;
        border-radius: 12px;
        width: 500px;
        box-sizing: border-box;
        border: 2px solid #32CD30;
        box-shadow: 0 0 15px rgba(50, 205, 50, 0.3);
    }

        .edit-user-container h2 {
            font-size: 3rem;
            margin-bottom: 20px;
            color: #32CD30;
            font-weight: bold;
            text-align: center;
        }

    label {
        font-size: 1rem;
        color: #B2D2A4;
        margin-bottom: 5px;
    }

    .form-control {
        background-color: #333;
        border: none;
        border-bottom: 1px solid #32CD30;
        color: white;
        margin-bottom: 20px;
        height: 40px;
        font-size: 16px;
        width: 100%;
    }

        .form-control:focus {
            border-color: #32CD30;
            box-shadow: none;
        }

    .btn-primary {
        background-color: #32CD30;
        color: black;
        border: none;
        padding: 10px;
        font-weight: bold;
        font-size: 16px;
        border-radius: 8px;
        width: 100%;
        margin-top: 10px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #2C5E1A;
            color: white;
        }

    .btn-secondary {
        background-color: #444;
        color: white;
        border: none;
        padding: 10px;
        font-size: 16px;
        border-radius: 8px;
        width: 100%;
        margin-top: 10px;
        transition: background-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #666;
        }

    .text-danger {
        font-size: 12px;
    }
</style>

<div class="edit-user-wrapper">
    <div class="edit-user-container">
        <h2>Edit User</h2>

        <form asp-action="EditUser" method="post">
            <input type="hidden" asp-for="UserID" />

            <div class="form-group">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="ManageUsers" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
