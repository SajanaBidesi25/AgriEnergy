@model IEnumerable<AgriEnergyConnect.Models.User>
@{
    ViewData["Title"] = "Manage Users";
}

<head>
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100vh;
            overflow: auto;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            position: relative;
            color: white;
        }

            body::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-image: url('@Url.Content("~/images/grass.jpeg")');
                background-size: cover;
                background-position: center;
                background-repeat: no-repeat;
                filter: brightness(0.4);
                z-index: -2;
            }

            body::after {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.5);
                z-index: -1;
            }

        h1 {
            color: #006400;
        }

        .btn-primary {
            background-color: #006400;
            border-color: #006400;
        }

            .btn-primary:hover {
                background-color: #004d00;
                border-color: #004d00;
            }

        .btn-warning {
            background-color: #ffcc00;
            border-color: #ffcc00;
            color: black;
        }

            .btn-warning:hover {
                background-color: #e6b800;
                border-color: #e6b800;
            }

        .btn-danger {
            background-color: red;
            border-color: red;
        }

            .btn-danger:hover {
                background-color: darkred;
                border-color: darkred;
            }

        .card {
            background-color: #1e1e1e;
            border: 1px solid #006400;
            color: white;
            height: 100%;
        }

        .card-body {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .user-actions {
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 style="color:green" class="mb-4">@ViewData["Title"]</h1>

        <a class="btn btn-primary mb-4" asp-action="CreateUser">Add New User</a>

        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var user in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@user.FullName</h5>
                            <p class="card-text"><strong>Email:</strong> @user.Email</p>
                            <p class="card-text"><strong>Role:</strong> @user.Role</p>

                            <div class="user-actions">
                                <a class="btn btn-warning btn-sm me-2" asp-action="EditUser" asp-route-id="@user.UserID">Edit</a>
                                <a class="btn btn-danger btn-sm" asp-action="DeleteUser" asp-route-id="@user.UserID"
                                   onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
