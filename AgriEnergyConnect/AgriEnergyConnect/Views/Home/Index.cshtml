@{
    ViewData["Title"] = "Home Page";
}
<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100vh;
        overflow: hidden;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        position: relative;
    }

        body::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('@Url.Content("~/images/grass.jpeg")');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            filter: brightness(0.4); /* Darkens the image */
            z-index: -2;
        }

        body::after {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5); /* dark overlay */
            z-index: -1;
        }

    .login-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        color: #fff;
    }

    .login-container {
        text-align: center;
        padding: 40px;
        align-items: center;
        border: 2px solid #32CD30;
        border-radius: 12px;
        background-color: #111;
        box-shadow: 0 0 15px rgba(50, 205, 50, 0.3);
        width: 500px;
    }

        .login-container h2 {
            font-size: 2.2rem;
            font-weight: bold;
            color: #32CD30;
            margin-bottom: 20px;
        }

    label {
        font-size: 1rem;
        color: #B2D2A4;
        display: block;
        margin-bottom: 6px;
        text-align: left;
    }

    .form-control {
        background-color: #333;
        border: none;
        border-bottom: 1px solid #32CD30;
        color: white;
        margin-bottom: 20px;
        height: 40px;
        font-size: 14px;
        width: 100%;
    }

        .form-control:focus {
            border-color: #32CD30;
            box-shadow: none;
        }

    .btn-custom-green {
        background-color: #32CD30;
        color: black;
        border: none;
        padding: 10px;
        font-weight: bold;
        width: 100%;
        transition: background-color 0.3s;
        font-size: 16px;
        border-radius: 8px;
    }

        .btn-custom-green:hover {
            background-color: #28a428;
            color: white;
        }

    .text-center a {
        color: #B2D2A4;
        text-decoration: none;
        font-size: 14px;
    }

        .text-center a:hover {
            text-decoration: underline;
            color: #32CD30;
        }
</style>

<div class="container-fluid login-wrapper">
    <div class="login-container">
        <div class="text-center">
            <h2 class="display-4">Welcome to AgriEnergyConnect!</h2>
            <p class="lead" style="color: #B2D2A4;">Empowering farmers and communities through smart, sustainable innovation.</p>
        </div>
    </div>
</div>
